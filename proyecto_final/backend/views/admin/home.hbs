<div class="container" style="margin: 70px auto;">
    <div class="row">
        <diV class="col d-flex flex-row justify-content-between">
            <p class="text-right">
                Hola {{ usuario }} !
            </p>
            <a class="btn btn-danger" href="/admin/login/logout">
                Cerrar Sesi√≥n <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/curriculum/modificar" method="POST">
                <input type="hidden" id="id" name="id" value="{{curriculum.id}}">
                <div class="input-group">
                    <span class="input-group-text">Correo</span>
                    <input type="text" class="form-control" id="correo" name="correo" value="{{curriculum.correo}}">
                    <span class="input-group-text">Telefono</span>
                    <input type="text" class="form-control" id="telefono" name="telefono" value="{{curriculum.telefono}}">
                </div>
                <div class="form-group">
                    <label for="introduccion" class="form-label">Introduccion</label>
                    <textarea class="form-control" id="introduccion" name="introduccion" rows="3">{{curriculum.introduccion}}</textarea>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Modificar Introduccion</button>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col d-flex justify-content-end">
            <a href="/admin/accion/nuevo" class="btn btn-success">Nueva Entrada</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Experiencia
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each experiencias}}
                    <tr>
                        <td>{{id}}</th>
                        <td>{{titulo}}</th>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/admin/accion/modificar/{{id}}" class="btn btn-primary">Modificar</a>
                                <a href="/entradas/eliminar/{{id}}" class="btn btn-primary">Borrar</a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
