                        <td>{{id}}</th>
                        <td>{{titulo}}</th>
                        <td class="d-flex justify-content-end">
                            <div class="btn-group" role="group">
                                <a href="/admin/accion/modificar/{{id}}" class="btn btn-primary">Modificar</a>
                                <a href="/admin/entradas/eliminar/{{id}}" class="btn btn-primary">Borrar</a>
                            </div>
