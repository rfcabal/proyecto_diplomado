<div class="container" style="margin: 70px auto;">
    <div class="row">
        <diV class="col d-flex flex-row justify-content-between p-4">
            <p class="text-right">
                Hola {{ usuario }} !
            </p>
            <a class="btn btn-danger" href="/admin/login/logout">
                Cerrar Sesión <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/admin/curriculum/modificar" method="POST" enctype="multipart/form-data">
                <input type="hidden" id="id" name="id" value="{{curriculum.id}}">
                <input type="hidden" id="foto" name="foto" value="{{curriculum.foto}}">
                <div class="input-group p-2">
                    <span class="input-group-text">Nombre</span>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{curriculum.nombre}}">
                    <span class="input-group-text">Posición</span>
                    <input type="text" class="form-control" id="posicion" name="posicion"
                        value="{{curriculum.posicion}}">
                </div>
                <div class="input-group p-2">
                    <span class="input-group-text">Correo</span>
                    <input type="text" class="form-control" id="correo" name="correo" value="{{curriculum.correo}}">
                    <span class="input-group-text">Telefono</span>
                    <input type="text" class="form-control" id="telefono" name="telefono"
                        value="{{curriculum.telefono}}">
                </div>
                <hr>
                <div class="form-group p-2">
                    <label for="introduccion" class="form-label">Introduccion</label>
                    <textarea class="form-control" id="introduccion" name="introduccion"
                        rows="3">{{curriculum.introduccion}}</textarea>
                </div>
                <hr>
                <div class="input-group p-2">
                    <span class="input-group-text">Linkedin</span>
                    <input type="text" class="form-control" id="linkedin" name="linkedin"
                        value="{{curriculum.linkedin}}">
                </div>
                <div class="input-group p-2">
                    <span class="input-group-text">Github</span>
                    <input type="text" class="form-control" id="github" name="github" value="{{curriculum.github}}">
                </div>
                <div class="input-group p-2">
                    <span class="input-group-text">Reddit</span>
                    <input type="text" class="form-control" id="reddit" name="reddit" value="{{curriculum.reddit}}">
                </div>
                <hr>
                    <div class="form-label">Imagen Actual</div>
                    <div class="input-group p-2">
                        {{{imagen}}}
                    </div>
                    <div class="input-group p-2">
                        <span class="input-group-text">Foto de Perfil</span>
                        <input type="file" class="form-control" id="imagen" name="imagen" value="{{curriculum.imagen}}">
                    </div>
                <hr>
                <div class="form-group d-flex justify-content-center p-2">
                    <button type="submit" class="btn btn-primary">Modificar Introduccion</button>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col d-flex justify-content-end">
            <a href="/admin/accion/nuevo" class="btn btn-success">Nueva Entrada</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            Experiencia
