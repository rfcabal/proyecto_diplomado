<div class="container" style="margin-top: 100px;">
    <div class="row">
        <form accept="/admin/login" method="post">
            <div class="mb-3 row  d-flex justify-content-center">
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="inputUser"
                        placeholder="Usuario" name="usuario">
                </div>
            </div>
            <div class="md-3 row  d-flex justify-content-center">
                <div class="col-sm-5">
                    <input type="password" class="form-control" id="inputPassword"
                        placeholder="ContraseÃ±a" name="password">
                </div>
            </div>
            <div class="md-3 row  d-flex justify-content-center">
                <div class="col-sm-5 p-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>   
            </div>
        </form>
    </div>
</div>

